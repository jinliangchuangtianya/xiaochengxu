/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 15rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.group{
  width: 720rpx;
}
.group1{
  width: 100%;
  height: 50%;
  padding-bottom: 15rpx;
  box-sizing: border-box;
}
.Woodfish{
  width: 50%;
  height: 100%;
  float: left;
  padding-right: 7.5rpx;
  box-sizing: border-box;
}
.Woodfish image{
  width: 100%;
  height: 100%;
}
.rightGroup{
  width: 50%;
  height: 100%;
  float: right;
  padding-left: 7.5rpx;
  box-sizing: border-box;
}
.rightGroup .user{
  width: 100%;
  height: 30%;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.rightGroup .user .background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  
}
.rightGroup .user .users_img{
  border: 5rpx solid white;
  width: 100rpx;
  height: 100rpx;
  z-index: 2; 
  position: relative;
  border-radius: 50%;
  margin-left: 15rpx;
}
.finger-guessing{
  height: 70%;
  box-sizing: border-box;
  padding-top: 15rpx;
}
.group2{
  height: 50%;
  display: flex;
  flex-direction: row;
}
.group2Left{
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding-right: 7.5rpx;
}
.group2right{
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 7.5rpx;
}
.dice{
  width: 100%;
  height: 50%;
  box-sizing: border-box;
  padding-bottom: 7.5rpx;
}
.Truewords{
  width: 100%;
  height: 50%;
  box-sizing: border-box;
  padding-top: 7.5rpx;
}
.Truewords image,.dice image,.group2right image,.finger-guessing image{
  width: 100%;
  height: 100%;
}
.getUserInfoBtn{
  width: 100%;
  height: 100%;
  border-radius: 0;
  padding: 0
}
.getUserInfoBtn::after{
  border: none;
}
.userinfo-nickname::after{
  border: none;
}
.userinfo-nickname{
  font-size: 30rpx;
  position: absolute;
  z-index: 2;
  color: white;
  left: 150rpx;
  background: none
}