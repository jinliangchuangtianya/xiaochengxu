/* pages/war-team/war-team.wxss */
page{
  width: 100%;
  height: 90%;
  padding: 5% 0;
  background:url('http://192.168.11.47/playgame/res/img/mybg.jpg') no-repeat left top;
  background-size: cover
}
.itemGroup{
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  position: relative;
  box-sizing: border-box;
}
.title{
  height: 100rpx;
  background: #6c4c3d;
  border-radius: 10rpx;
  border-bottom: 3rpx dashed #5b3c2a;
  color: #f8c7a6;
  line-height: 70rpx;
  position: relative;
  z-index: 2
}
.itemInfo{
  height: 150rpx;
  background: #6c4c3d;
  border-radius: 10rpx 10rpx 0 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #f8c7a6;
  position: relative;
  z-index: 2
}
.itemInfo view{
  flex-grow: 1;
  text-align: center;
  height: 100rpx;
  width: 0rpx;
  display: flex;
  flex-direction: column; 
  justify-content: space-between; 
}
.itemInfo view:nth-of-type(1),.itemInfo view:nth-of-type(2){
  border-right: 1px solid #f8c7a6;
}
.title input{
  background: #5b3c2a;
  height: 70rpx;
  border-radius: 35rpx;
  width: 535rpx;
  float: left;
  margin: 15rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
  font-size: 30rpx;
}
.changeItem{
  width: 120rpx;
  float: left;
  height: 70rpx;
  margin-top: 15rpx;
  text-align: center;
  border-radius: 35rpx;
  background: #5b3c2a;
  font-size: 24rpx;
}
.notice{
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  height: 70rpx;
  background: #6c4c3d;
  border-top: 1px solid #573921;
  border-bottom: 1px solid #573921;
  color: #f8c7a6;
  font-size: 24rpx;
  line-height: 70rpx;
  position: relative;
  z-index: 2
 
}
.notice text{
  float: left;
   margin-left: 35rpx;
}
.notice image{
  width: 44rpx;
  height: 36rpx;
  float: left;
  margin-top: 18rpx;
}
.scroll{
  position: absolute;
  top: 320rpx;
  left: 0;
  right: 0;
  width: 100%;
  bottom: 120rpx;
  box-sizing: border-box;
  padding-left: 15rpx;
  background: #6c4c3d;
  border-radius: 10rpx;
  z-index: 1;
}
.user{
  width: 122rpx;
  height: 152rpx;
  margin-top: 25rpx;
  margin-right: 15rpx;
  float: left;
}
.user>text{
  text-align: center;
  display: block;
  height: 30rpx;
  font-size: 24rpx;
  color: #462617;
}
.userInfo{
  width: 122rpx;
  height: 122rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.userInfo image{
  width: 100%;
  height: 100%;
}
.userInfo text{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, .7);
  font-size: 24rpx;
  text-align: center;
  display: block;
  color: #afa5a3
}
.btns{
  width: 100%;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.btns button{
  height: 80rpx;
  width: 325rpx;
  line-height: 80rpx;
}
.btns image{
  width: 43rpx;
  height: 43rpx;
  vertical-align: middle;
  position: relative;
  top: -1rpx;
  margin-right: 10rpx;
}