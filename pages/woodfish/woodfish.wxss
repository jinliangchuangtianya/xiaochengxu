/* pages/woodfish/woodfish.wxss */
page{
  width: 100%;
  height: 100%;
  background:url('http://192.168.11.47/playgame/res/img/mybg.jpg') no-repeat left top;
  background-size: cover
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.muyu{
  width: 520rpx;
  height: 394rpx;
  margin-top: 100rpx;
  position: relative;
}
.muyu image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.menuGroup{
  width: 100%;
  height: 150rpx;
  position: absolute;
  top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  color: #e38e5c;

}
.menuRight{
  width: 30%;
  height: 110rpx;
}
.menuLeft{
  width: 30%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.menuLeft .left{
  overflow: hidden;
  background: black;
  padding-left: 15px;
  width: 70%;
  border-radius: 0rpx 30rpx 30rpx 0rpx;
}
.menuLeft text{
  float: left;
}
.leftTop image{
  width: 35rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  float: left;
}
.leftbottom image{
  width: 37rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  float: left;
}
.menuRight{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-right: 25rpx;
}
.menuRight image{
  width: 49rpx;
  height: 57rpx;
  margin-right: 10rpx;
}
.menuRight text, .menuLeft text{
  font-size: 26rpx;
}
.scoreGroup{
  text-align: center;
}
.scoreGroup .score{
  text-align: center;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 120rpx;
  font-weight: bold;
  font-family: 'arial';
}
.zhuzhan{
  font-size: 30rpx;
  color: black;
  padding: 5rpx 30rpx;
  background-image:linear-gradient(to right, rgba(77,96,154,0) 0%, rgba(77,96,154,1) 20%,  rgba(77,96,154,1) 80%, rgba(77,96,154,0));
}
.bottomGroup{
  width: 710rpx;
  height: 75rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  line-height: 75rpx;
}
.createTeam{
  color: white;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  text-align: center;
  background: #55a546;
  border-radius: 8rpx;
}
.createTeam image{
  width: 44rpx;
  height: 34rpx;
  vertical-align:-3rpx;
  margin-right: 15rpx;
}
.team, .mes{
  background: #4e3a2f;
  border-radius: 25rpx;
  color: #c6a586;
}
.mes{
  width: 125rpx;
  height: 100%;
  float: left;
  font-size: 20rpx;
}
.mes image{
  width: 41rpx;
  height: 41rpx;
  margin: 17rpx;
  float: left;
}
.mes text{
  width: 50rpx;
  display: inline-block;
  text-align: left;
}
.team{
  width: 565rpx;
  height: 100%;
  float: right;
  font-size: 24rpx;
  letter-spacing: 3rpx;
}
.team image:nth-of-type(1){
  float: left;
  width: 48rpx;
  height: 48rpx;
  margin: 13.5rpx 17rpx;
}
.team image:nth-of-type(2){
  float: right;
  width: 14rpx;
  height: 25rpx;
  margin: 25rpx 17rpx;
}
.team text:nth-of-type(1){
  max-width: 350rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  float: left;
}
.messageGroup{
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  position: absolute;
  bottom: 120rpx;
  color: #c6a586;
  font-size: 20rpx;
  line-height: 35rpx;
  letter-spacing: 3rpx;
  overflow: hidden;
}
.mesShow{
  display: block;
}
.mesHide{
  display: none;
}
.MessBoardGroup{
  width: 100%;
  height: 80%;
  position: absolute;
  bottom: 0;
  transition: .5s ease-in;
  transform: translateY(100%)
}
.showMes{
  display: block
}
.hideMes{
  display: none
}