.wrap{
  width: 100%;
  box-sizing:border-box;
  font-size:36rpx;
  color:#666;
  font-weight:bold;
}
.item{
  width: 100%;
  height: 210rpx;
  display: flex;
  align-items: center;
}
.run{
  animation-name: run;
    animation-duration: 4s;
    animation-timing-function: ease-out;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
}
.run2{
    animation-name: run;
    animation-duration: 4.5s;
    animation-timing-function: ease-out;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
}
