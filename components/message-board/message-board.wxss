/* components/messageBoard/messageBoard.wxss */
.messageBoard{
  position: relative;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
}
.title{
  height: 100rpx;
  padding: 0 20rpx;
  text-align: center;
  position: relative;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #e1e1e1
}
.title image:nth-of-type(1){
  width: 130rpx;
  height: 54rpx;
  position: absolute;
  left: 20rpx;
  top: 23rpx;
}
.title image:nth-of-type(2){
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.scroll{
  position: absolute;
  top: 100rpx;
  left: 0; right: 0;
  bottom: 90rpx;
}
.mesItem{
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  overflow: hidden;
}
.mesItem image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  float: left;
  margin-top: 15rpx;
}
.mesItem .mesInfo{
  width: 630rpx;
  float: left;
  display: flex;
  flex-direction: column;
  color: #333;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.mesInfo text:nth-of-type(1){
  font-size: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.mesInfo text:nth-of-type(2){
  padding-top: 5rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}
.mesInfo text:nth-of-type(3){
  padding-top: 15rpx;
  font-size: 16rpx;
  color: rgb(207, 207, 207);
}
.bottom{
  width: 710rpx;
  height:60rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  padding: 15rpx 20rpx;
}
.bottom textarea{
  width: 560rpx;
  height: 50rpx;
  line-height: 100rpx;
  float: left;
  font-size: 30rpx;
}
.bottom button{
  width: 120rpx;
  height: 60rpx;
  float: right;
  padding: 0
}
.bottom .text{
  font-size: 30rpx;
  color: #ccc;
}