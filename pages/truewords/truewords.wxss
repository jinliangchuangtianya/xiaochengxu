/* pages/truewords/truewords.wxss */
@-webkit-keyframes run {
    from {
        transform: translateY(0);
    }

    to {
        transform: translate3d(0,-96%,0);
    }
}

@keyframes run{
    from {
        transform: translateY(0);
    }

    to {
        transform: translate3d(0,-96%,0);
    }
}
page{
  width: 100%;
  height: 100%;
  background: url('http://192.168.11.47/playgame/res/img/zxh-bg.png') no-repeat left top;
  background-size: 100% 100%;
}
.swiper{
  width: 600rpx;
  height: 210rpx;
  position: absolute;
  left: 75rpx;
  overflow: hidden;
}
.swiper1{
   top: 14%;
}
